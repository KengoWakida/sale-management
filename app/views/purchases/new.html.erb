<h2>購入画面</h2>
<%= form_with(model: @purchase_stock,url: purchases_path, local: true) do |form| %>
  <div>
      <%= form.label :order_no, "注文番号" %>    
      <%= form.text_field :order_no, placeholder: "注文番号" %>
  </div>
  <div>
      <%= form.label :order_no, "品名" %>    
      <%= form.text_field :item, placeholder: "品名" %>
  </div>
  <div>
      <%= form.label :order_no, "数量" %>    
      <%= form.text_field :quantity, placeholder: "数量" %>
  </div>
  <div>
      <%= form.label :order_no, "単価" %>    
      <%= form.text_field :price, placeholder: "単価" %>
  </div>
  <div>
      <%= form.submit "購入" %>
  </div>
<% end %>